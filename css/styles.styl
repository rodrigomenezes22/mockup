@import 'color.styl'


body
    background-color: $primary_100
    font-family: 'verdana', sans-serif

header 
    display: flex 
    flex-direction: row
    height: 140px
    position: relative

    .navbar-start
        height: 90px
        width: 50%
        img
            width: 160px
            height: 58px
            padding: .5rem

    .navbar-middle
        width: 100%
        position: absolute
        bottom: 10px
        align-items: center


    .navbar-end 
        align-items: flex-end
        width: 50%
        height: 90px

    .search-field 
        background-color: $secondary_100
        border: 0px
        border-radius: 5px 
        padding: .5rem
        width: 95%
    
    .select-input
        background-color: $secondary_100
        border: 0px
        border-radius: 5px 
        padding: .5rem
        max-width: 300px

    .field-wrapper
        label
            color: $header_text_100


// Left Navi


.main-navi 
    display: none
    &.is-active 
        display: block 
        position: fixed 
        top: 0
        bottom: 0
        left: 0 
        right: 0
        background: $primary_100
        z-index: 9
        width: 100%
        height: 100vh
    ul 
        list-style-type: none
        margin: 100px 0px 20px 0px 
        padding: 0
        overflow: hidden
        li 
            padding: .5rem 1rem
            text-align: center
            a 
                color: $links_100
                font-size: 27px 
                transition : color .7s
                text-decoration: none 
                &:hover 
                    color: $orange_100
                    transition : color .7s


.navbar-burger 
    width: 56px 
    height: 56px 
    background-color: $orange_100
    display: flex 
    align-items: center 
    justify-content: center 
    border-radius: 50%
    position: fixed
    bottom: 60px 
    right: 20px
    box-shadow: 1px 3px 10px rgba(0,0,0,0.2)
    transition: right 1s
    z-index: 10
    i 
        color: white 
        font-size: 30px 
    &.nav-up 
        right: -100px 
        transition: right 1s

    .fa-bars
        display: block 
    .fa-xmark
        display: none
    
    &.is-active 
        .fa-xmark
            display: block
        .fa-bars
            display: none



// content

#main-content
    display: flex 
    flex-direction: row
    height: 100%

    .article-card:first-child 
        border-radius: 10px 10px 0px 0px 

    .article-card:not(firs-child)
        border-bottom:0px

    .article-card:last-child 
        border-radius: 0px 0px 10px 10px
        border-bottom: 1px solid $border_color_100

.article-card
    position: relative
    background: #fff
    border: 1px solid $border_color_100
    padding: 1rem
    box-shadow: 1px 3px 10px rgba(0,0,0,0.15)
    h2 
        margin: 0px 
        font-weight: 300 
        font-size: 22px
    ul
        list-style-type: none;
        margin: 0
        padding: 0
        overflow: hidden
        li
            float: left
            padding: .5rem 2rem .5rem 0rem
            color: $article_text_100
            font-size: 16px

    .comments
        position: absolute 
        height: 96px 
        width: 96px
        right: 0px
        top: 0px
        display: flex 
        align-items: center 
        justify-content: center
        p 
            color: white 
            background: $orange_100
            padding: .5rem 
            border-radius: 5px

        .triangle 
            width: 14px 
            height: 14px 
            background: $orange_100
            clip-path: polygon(100% 0%, 0% 0%, 100% 100%)
            position: absolute 
            top: 65% 
            left: 45%


.left-column
    width: 20%

.right-column
    width: 95%
    margin: 0px auto


// buttons
.submit 
    background: $orange_100
    font-size: 24px 
    color: white 
    padding: .8rem 1.5rem 
    border-radius: 5px
    border: 0px
    transition: all .4s
    margin: 0px auto
    display: block

    &:hover 
        background: #1CCC80
        transition: all .4s
        box-shadow 0px 3px 10px rgba(0,0,0,0.1)
        transform: translate(-2px, -2px)
    &:active
        transition: all .4s
        transform: translate(0px, 0px)
        box-shadow: none


// Footer Styles 
footer 
    position: static 
    width: 95%
    margin: 30px auto 
    .footer-wrapper
        position: static
        width: 100%
        display: flex 
        flex-direction: row
        .left 
            width: 50%
        .right
            width: 50%
    ul 
        list-style-type: none
        padding: 0px 
        margin: 0px 
        li 
            padding: .3rem 0px .3rem 0rem
            a 
                text-decoration: none
                color: $links_100

// Helpers
.is-verticaly-centered
    display: flex 
    flex-direction: column 
    justify-content: center

